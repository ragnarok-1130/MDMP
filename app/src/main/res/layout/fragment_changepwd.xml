<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ChangePwdFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_changepwd"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="修改密码"></android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_currentpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_changepwd"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="当前密码："
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_currentpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_currentpassword"
        android:padding="8dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_newpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_currentpassword"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="新密码："
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_newpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_newpassword"
        android:padding="8dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_confirmnewpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_newpassword"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:text="新密码："
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_confirmnewpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_confirmnewpassword"
        android:padding="8dp"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/bt_changepwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_shape"
        android:text="确定" />

    <Button
        android:id="@+id/bt_canclechange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="20dp"
        android:background="@drawable/btn_shape"
        android:text="取消" />

</RelativeLayout>